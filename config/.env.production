# Production Environment Configuration
# Copy this file to .env in production

# ==============================================
# APPLICATION ENVIRONMENT
# ==============================================
APP_ENV=production

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DB_HOST=localhost
DB_NAME=workstab
DB_USER=workstab_user
DB_PASS=your_secure_password_here

# ==============================================
# JWT SECURITY - CRITICAL: CHANGE THIS
# ==============================================
JWT_SECRET=your_jwt_secret_here_minimum_32_characters_required_for_security

# ==============================================
# CORS CONFIGURATION
# ==============================================
CORS_ALLOWED_ORIGINS=https://workstab.com,https://www.workstab.com

# ==============================================
# SECURITY
# ==============================================
COOKIE_DOMAIN=.workstab.com